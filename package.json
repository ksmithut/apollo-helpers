{
  "name": "apollo-helpers",
  "version": "0.0.1",
  "main": "src/index.js",
  "author": "ksmithut",
  "license": "MIT",
  "scripts": {
    "lint": "standard .",
    "pretest": "npm run lint",
    "test": "jest",
    "codeclimate": "cat ./coverage/lcov.info | codeclimate-test-reporter"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "standard"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "dependencies": {
    "graphql": "^0.13.2",
    "graphql-tools": "^2.23.1",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "codeclimate-test-reporter": "^0.5.0",
    "graphql-subscriptions": "^0.5.8",
    "jest": "^22.4.2",
    "standard": "^11.0.1"
  }
}
